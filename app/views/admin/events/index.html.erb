<!-- app/views/admin/events/index.html.erb -->
<h1 class="text-2xl font-bold mb-4">Events</h1>

<%= link_to "New Event", new_admin_event_path,
    class: "btn btn-primary mb-4" %>

<table class="table w-full table-zebra">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Published</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |e| %>
      <tr>
        <td><%= e.title %></td>
        <td><%= e.date %></td>
        <td><%= e.location %></td>
        <td><%= e.result_published ? "Yes" : "No" %></td>
        <td class="space-x-2">
          <%= link_to "Show", admin_event_path(e),
              class: "btn btn-sm btn-ghost" %>
          <%= link_to "Edit", edit_admin_event_path(e),
              class: "btn btn-sm btn-secondary" %>
          <%= link_to "Delete", admin_event_path(e),
              method: :delete,
              data: { confirm: "Delete this event?" },
              class: "btn btn-sm btn-error" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
