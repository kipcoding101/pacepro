<%= render 'layouts/header' %>

<section class="relative">
  <!-- Hero banner -->
  <div
    class="h-64 bg-center bg-cover"
    style="background-image: url('<%= asset_path "hero1.webp" %>')"
  >
    <div class="h-full bg-black/50 flex items-center justify-center">
      <h1 class="text-4xl text-white font-bold">Events</h1>
    </div>
  </div>

  <!-- Subtitle -->
  <div class="max-w-4xl mx-auto text-center mt-6 px-4">
    <p class="text-gray-600">
      Discover upcoming and past events. Browse our calendar of races, tours, and meet-ups.
    </p>
  </div>
</section>

<!-- Horizontal scroll container -->
<div class="overflow-x-auto py-8 px-4">
  <div class="inline-flex space-x-6">
    <% @events.each do |event| %>
      <div class="card card-compact w-64 bg-base-100 shadow-lg hover:shadow-2xl transition-shadow duration-200">
        <figure class="h-40 overflow-hidden">
          <img src="" alt="<%= event.title %>" class="object-cover w-full h-full" />
        </figure>
        <div class="card-body p-4">
          <h2 class="card-title text-lg"><%= event.title %></h2>
          <div class="text-sm text-gray-500 mt-1">
            <span class="inline-flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none"
                   viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10m-6 8h6m-6 0H5m14 0h2a2 2 0 002-2V7a2 2 0
                      00-2-2h-2m-6 16H9m6-8a6 6 0 11-12 0 6 6 0 0112 0z" />
              </svg>
              <%= event.date.strftime("%-d %b %Y") %>
            </span>
            <br/>
            <span class="inline-flex items-center mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none"
                   viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M17.657 16.657L13.414 12m0 0l4.243-4.243M13.414
                      12H3" />
              </svg>
              <%= event.location %>
            </span>
          </div>
          <div class="mt-3">
            <span class="badge badge-outline"></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>